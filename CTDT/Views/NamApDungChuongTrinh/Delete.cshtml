@model CTDT.Models.TbNamApDungChuongTrinh

@{
    ViewData["Title"] = "Delete";
}

<style>

    body {
        position: relative; /* Đặt vị trí tương đối cho phần thân, giúp định vị các phần tử con */
        background-size: cover; /* Ảnh nền phủ toàn bộ khu vực */
        background-position: center; /* Ảnh nền căn giữa */
        background-attachment: fixed; /* Ảnh nền cố định khi cuộn */
        background-repeat: no-repeat; /* Ảnh nền không lặp */
        padding-top: 70px; /* Thêm khoảng cách phía trên */
        color: #333; /* Màu chữ mặc định */
        height: 100vh; /* Chiều cao toàn màn hình */
        overflow: hidden; /* Ẩn phần nội dung tràn ra */
    }


        body::before {
            content: ""; /* Thêm phần tử giả (pseudo-element) trước phần thân */
            position: absolute; /* Đặt vị trí tuyệt đối, phủ toàn bộ thân */
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.2); /* Màu trắng mờ (độ trong suốt 20%) */
            backdrop-filter: blur(10px); /* Hiệu ứng làm mờ phía sau */
            z-index: -1; /* Đặt lớp này phía sau nội dung chính */
        }


    .delete-container {
        background-color: rgba(255, 255, 255, 0.95); /* Màu nền trắng với độ mờ nhẹ */
        padding: 40px; /* Khoảng cách bên trong hộp */
        border-radius: 15px; /* Bo góc cho hộp */
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.2); /* Hiệu ứng đổ bóng cho hộp */
        margin: auto; /* Căn giữa hộp */
        text-align: center; 
        width: auto; /* Chiều rộng tự động */
        max-width: 100%; /* Chiều rộng tối đa là toàn bộ màn hình */
        overflow-x: auto; /* Hiển thị thanh cuộn ngang nếu nội dung tràn */
    }

    h1 {
        font-size: 48px; 
        font-weight: bold; 
        color: #d9534f; /* Màu chữ đỏ */
        margin-bottom: 20px; /* Khoảng cách dưới */
    }

    h3 {
        font-size: 20px; 
        margin-bottom: 20px; /* Khoảng cách dưới */
        color: #333; /* Màu chữ xám đậm */
    }

    .table {
        font-family: arial, sans-serif; 
        border-collapse: collapse; /* Gộp đường viền giữa các ô */
        width: 100%; /* Chiều rộng 100% của container */
    }

    td, th {
        border: 1px solid #dddddd; /* Đường viền màu xám nhạt */
        text-align: center;
        padding: 8px; /* Khoảng cách bên trong ô */
    }

    tr:nth-child(even) {
        background-color: white; 
    }

    thead th {
        white-space: nowrap; /* Không cho phép xuống dòng */
        text-align: center; 
    }

    .btn-container {
        margin-top: 30px; /* Khoảng cách phía trên */
    }

    .btn {
        margin: 0 10px; /* Khoảng cách hai bên nút */
        padding: 10px 20px; /* Khoảng cách bên trong nút */
        font-size: 16px; /* Kích thước chữ */
        border-radius: 5px; /* Bo góc nút */
    }

    .alert-warning {
        background-color: #fcebea; /* Nền màu hồng nhạt */
        color: #d9534f; /* Màu chữ đỏ */
        border: 1px solid #f5c6cb; /* Đường viền màu hồng đậm */
        margin-top: 20px; /* Khoảng cách phía trên */
        padding: 15px; /* Khoảng cách bên trong */
        font-size: 16px; /* Kích thước chữ */
        border-radius: 5px; /* Bo góc hộp cảnh báo */
    }
</style>

<div class="delete-container">
    <h5 class="card-title" style="text-align:center">
        NĂM ÁP DỤNG CHƯƠNG TRÌNH

    </h5>
    <h1>Xóa</h1>
    <h3>Bạn có chắc chắn muốn xóa không?</h3>
    <div>
        <hr />
        <table class="table table-striped">
            <thead style="background-color:#dddddd">
                <tr>
                    <th>Số tín chỉ tối thiểu để tốt nghiệp</th>
                    <th>Tổng học phí toàn khóa</th>
                    <th>Năm áp dụng</th>
                    <th>Chỉ tiêu tuyển sinh hàng năm</th>
                    <th>ID Chương trình đào tạo</th>
                </tr>
            </thead>
            <tbody>
                <tr style="background-color:white">
                    <td>@Html.DisplayFor(model => model.SoTinChiToiThieuDeTotNghiep)</td>
                    <td>@Html.DisplayFor(model => model.TongHocPhiToanKhoa)</td>
                    <td>@Html.DisplayFor(model => model.NamApDung)</td>
                    <td>@Html.DisplayFor(model => model.ChiTieuTuyenSinhHangNam)</td>
                    <td>@Html.DisplayFor(model => model.IdChuongTrinhDaoTaoNavigation.IdChuongTrinhDaoTao)</td>
                </tr>
            </tbody>
        </table>
        <hr />
        <div class="btn-container">
            <form asp-action="Delete" method="post" style="display: inline;">
                <input type="hidden" asp-for="IdNamApDungChuongTrinh" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </form>
            <a asp-action="Index" class="btn btn-secondary">Quay Lại </a>
        </div>
        <div class="alert alert-warning">
            <strong>Cảnh báo!</strong> Nếu bạn xóa, bạn không thể khôi phục lại được dữ liệu này.
        </div>
    </div>
</div>
